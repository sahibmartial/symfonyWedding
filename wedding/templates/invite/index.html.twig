{% extends 'base.html.twig' %}

{% block title %}Wedding-Invitation{% endblock %}


{% block content %}
	
	{% if notification %}
	<div class="alert alert-info">
		{{ notification }}
		<hr>
	</div>
	{% endif %}
	<h1>Obtenir son Invitation</h1>

	{{form_start(form)}}
	<div class="row">
	<div class="col-md-6">{{ form_row(form.nom) }}</div>
	<div class="col-md-6">{{ form_row(form.prenom) }}</div>
	<div class="col-md-6">{{form_row(form.email)}}</div>
	<div class="col-md-6">{{form_row(form.phone)}}</div>
	<div class="col-md-6">{{form_row(form.pays)}}</div>
	<div class="col-md-6">{{form_row(form.lien)}}</div>
	
   </div>

	{{form_end(form)}}


{% endblock %}
